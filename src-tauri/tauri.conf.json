{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "play-on",
  "version": "0.3.3",
  "identifier": "moe.memesta.play-on",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "PLAY-ON!",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "transparent": false,
        "maximizable": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' asset: http: https: ws: wss: blob: data: manga: tauri:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": "./entitlements.plist"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "playon"
        ]
      }
    }
  }
}